page {
  background: #fdfdfd;
  height: 100%;
  width: 100%;
}
.board {
  height: 240rpx;
  display: flex;
  background: #C1EDC9;
  padding: 0 50rpx;
}
.board_img {
  width: 210rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.board_img image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.board_info {
  /* padding: 25rpx 0; */
  padding-top: 40rpx;
  /* padding-bottom: 10rpx; */
  width: calc(100% - 210rpx);
  font-size: 36rpx;
  color: #fff;
}
.board_info view {
  line-height: 50rpx;
}
.board_info view:last-child {
  font-size: 30rpx;
}
.btn_list {
  /* margin-top: 36rpx; */
  display: flex;
  border-bottom: 1px solid #eaeaea;
}
.btn_list view {
  height: 120rpx;
  width: 33%;
  text-align: center;
  line-height: 120rpx;
  border-right: 1px solid #eaeaea;
  font-size: 28rpx;
  color: #333;
}
.btn_list view:last-child {
  border: none;
}
.bye {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  /* background: #ccc; */
  text-align: center;
  color: #ccc;
  font-size: 28rpx;
  position: fixed;
  bottom: 0;
}
.bye text {
  padding: 0 20rpx;
  text-decoration: underline;
}
