/* pages/feedback/feedback.wxss */
page {
  width: 100%;
  height: 100%;
  background: #fdfdfd;
}
.feedback_title {
  padding: 30rpx 20rpx;
}
.feedback_title input {
  width: 100%;
  height: 60rpx;
  border-bottom: 1px solid #eaeaea;
  font-size: 28rpx;
}
.feedback_content {
  border: 1px solid #eaeaea;
  width: calc(100% - 60rpx);
  margin: 20rpx auto;
  padding: 12rpx 15rpx;
}
.feedback_content textarea {
  height: 300rpx;
  font-size: 28rpx;
  border-radius: 4rpx;
  width: 100%;
}
.feedback_img .img_list {
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #eaeaea;
  margin-right: 36rpx;
  position: relative;
}
.img_list image {
  width: 100%;
  height: 100%;
}
.img_list view {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  background: #ff4400;
  font-weight: bolder;
  font-size: 50rpx;
  right: -25rpx;
  top: -25rpx;
  color: #fff;
}
.feedback_img .add_img {
  width: 160rpx;
  height: 160rpx;
  text-align: center;
  line-height: 142rpx;
  font-weight: bolder;
  color: #999;
  font-size: 120rpx;
  border: 1px solid #eaeaea;
}
.feedback_img {
  display: flex;
  /* justify-content: space-between; */
  padding: 20rpx;
}
.feedback_submit {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  background: #C1EDC9;
  font-size: 30rpx;
}
.err_info {
  padding: 0 24rpx;
  color: #ff4400;
  font-size: 30rpx;
}
