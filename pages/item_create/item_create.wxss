/* pages/item_create/item_create.wxss */
page {
  min-height: 100%;
  background: #fafafa;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.form_item, .form_item_three {
  display: flex;
  align-items: center;
  min-height: 85rpx;
  padding: 0 24rpx;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  background: #fff;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #333;
}
.form_item .label, .form_item_three .label {
  width: 37%;
}
.form_item>view:last-child {
  width: 63%;
  padding: 6px 8px;
}
.form_item_three view:nth-child(2) {
  width: 57%;
  padding: 6px 8px;
}
.form_item_three view:nth-child(3) {
  width: 6%;
}
.form_item textarea {
  width: 100%;
  padding: 6rpx 8rpx;
  box-sizing: border-box;
  border: 1px solid #eaeaea;
}
.textarea {
  align-items: flex-start;
  padding: 18rpx 24rpx;
}
.textarea>view:last-child {
  padding: 0;
}
.form_item_three>view:last-child {
  display: flex;
  justify-content: center;
  align-items: center;
}
.form_item_three>view:last-child text {
  font-size: 45rpx;
}
.err_info {
  height: 120rpx;
  line-height: 40rpx;
  color: #ff0100;
  padding: 0 20rpx;
  font-size: 24rpx;
}
.operate_line view:first-child {
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  color: #C1EDC9;
}
.operate_line view:last-child {
  height: 80rpx;
  width: 100%;
  background: #C1EDC9;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
}
.position text, .book text, .today text {
  color: #464748;
}
.form_tip {
  padding: 0 20rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #999;
}
.add_contact {
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  text-decoration: underline;
  color: #C1EDC9;
}
.modal {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 3;
  background: rgba(0, 0, 0, .63);
  display: flex;
  justify-content: center;
  align-items: center;
}
.window {
  width: 72%;
  background: #fff;
  border-radius: 12rpx;
}
.window .win_title {
  line-height: 80rpx;
  border-bottom: 1px solid #eaeaea;
  text-align: center;
  font-size: 28rpx;
}
.window .win_item {
  padding: 16rpx 20rpx;
  padding-top: 56rpx;
  /* border-bottom: 1px solid #eaeaea; */
  height: 70rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.window .win_item input {
  width: 80%;
  padding: 6rpx 10rpx;
  height: 50rpx;
  margin: 0 auto;
  border: 1px solid #eaeaea;
}
.window .win_operate {
  display: flex;
  height: 90rpx;
}
.window .win_operate view {
  width: 50%;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
}
.window .win_operate view:first-child {
  background: #C1EDC9;
  color: #fff;
  border-bottom-left-radius: 12rpx;
}
.window .win_operate view:last-child {
  background: #f1f1f1;
  color: #999;
  border-bottom-right-radius: 12rpx;
}
.win_error {
  height: 40rpx;
  line-height: 50rxp;
  padding: 0 30rpx;
  color: #ff0100;
  font-size: 24rpx;
}
.win_list {
  width: 85%;
  height: 80%;
  background: #fff;
  overflow: scroll;
  padding: 40rpx 20rpx;
  border-radius: 8rpx;
}
.contact_item {
  font-size: 28rpx;
  color: #333;
  border-bottom: 1px solid #eaeaea;
}
.contact_item view {
  padding: 15rpx 18rpx;
  line-height: 42rpx;
}
view.checked {
  background: rgba(220, 220, 220, .48);
  color: #666;
}
