page {
  width: 100%;
  background: #fafafa;
  min-height: 100%;
}
.container {
  height: 100%;
}
.record_list {
  padding: 20rpx;
}
.record_item {
  /* background: #fff; */
  margin-top: 36rpx;
  /* padding: 20rpx 0; */
  background: #fff;
  box-shadow: 4px 4px 5px #dadada;
  border-radius: 12rpx;
}
.record_item audio {
  width: 100%;
  height: 80rpx;
  border-radius: 12rpx;
}
.show_audio {
  position: relative;
  height: 80rpx;
}
.show_audio view {
  position: absolute;
  height: 80rpx;
  line-height: 80rpx;
  left: 30rpx;
  top: 1px;
}
.show_audio text {
  font-size: 50rpx;
  color: #C1EDC9;
}
.control {
  display: flex;
  background: #fff;
  height: 72rpx;
  border-top: 1px solid #f0f0f0;
}
.control_item {
  width: 33.3%;
  justify-content: space-between;
  border-right: 1px solid #f0f0f0;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #666;
}
.control_item text:first-child {
  margin-right: 10rpx;
}
.control_item:last-child {
  border: none;
}
.delete {
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  background: #fff;
  color: #ff0100;
  border-top: 1px solid #f0f0f0;
  font-size: 28rpx; 
}
.delete text:first-child {
  margin-right: 10rpx;
}
view.symbol {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #ff0100;
  margin-top: 30rpx;
  left: 20rpx;
}
